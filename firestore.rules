rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    // Satellites collection - authenticated users can read, only owners can write
    match /satellites/{satelliteId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
                              (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Scenarios collection - authenticated users can read, only owners can write
    match /scenarios/{scenarioId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
                              (resource.data.userId == request.auth.uid || isAdmin());
      
      // Allow reading published scenarios without authentication for public access
      allow get: if resource.data.isPublished == true;
      allow list: if isAuthenticated();
    }

    // Scenario Steps collection - authenticated users can read, only owners can write
    match /scenarioSteps/{stepId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
                              (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Ground Stations collection - authenticated users can read, only admins can write
    match /ground_stations/{stationId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Scenario Sessions collection - users can read/write their own sessions
    match /scenario_sessions/{sessionId} {
      allow read: if isAuthenticated() && 
                     (resource.data.user_id == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && 
                       request.resource.data.user_id == request.auth.uid;
      allow update: if isAuthenticated() && 
                       (resource.data.user_id == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() && 
                       (resource.data.user_id == request.auth.uid || isAdmin());
    }

    // Audit logs - users can read their own logs, admins can read all
    match /audit_logs/{logId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Token blacklist - only system/admin can access
    match /tokenBlacklist/{tokenId} {
      allow read, write: if isAdmin();
    }

    // User Progress collection - users can read/write their own progress
    match /user_progress/{progressId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Help Center collection - readable by all authenticated users, writable by admins
    match /help_center/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Help categories subcollection
    match /help_center/categories/{categoryId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Help articles subcollection
    match /help_center/articles/{articleId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Help FAQs subcollection
    match /help_center/faqs/{faqId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Leaderboard collection - readable by all authenticated users
    match /leaderboard/{entryId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Tutorials collection - readable by all authenticated users, writable by admins
    match /tutorials/{tutorialId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Default deny all for any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
